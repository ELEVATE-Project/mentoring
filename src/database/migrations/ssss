const { Kafka } = require('kafkajs');

// Step 1: Create Kafka client
const kafka = new Kafka({
  clientId: 'mentoring',
  brokers: ['10.148.0.38:9092']  // replace with your broker(s)
});

// Step 2: Create a consumer
const consumer = kafka.consumer({ groupId: 'my-group' });

const run = async () => {
  // Step 3: Connect the consumer
  await consumer.connect();

  // Step 4: Subscribe to a topic
  await consumer.subscribe({ topic: 'qa.userCreate', fromBeginning: false });

  // Step 5: Run the consumer
  await consumer.run({
    eachMessage: async ({ topic, partition, message }) => {
      console.log({
        topic,
        partition,
        offset: message.offset,
        key: message.key?.toString(),
        value: message.value.toString(),
      });
    },
  });
};

run().catch(console.error);
